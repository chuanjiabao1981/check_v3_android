<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="1.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/issue_photo_preview_image"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_marginBottom="4.0dip"
            android:layout_marginRight="6.0dip"
            android:layout_marginTop="4.0dip" 
            android:layout_gravity="center_vertical"
             />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                
                <ImageView
                    android:id="@+id/issue_rsp_person_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginLeft="-2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:layout_alignTop="@+id/issue_rsp_person_name_text"
                    android:src="@drawable/ic_issue_rsp_person" />

                <TextView
                    android:id="@+id/issue_rsp_person_name_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8.0dip"
                    android:layout_toRightOf="@id/issue_rsp_person_icon"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:text="乔俊平"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/issue_deadline_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8.0dip"
                    android:includeFontPadding="false"
                    android:lines="1"
                    android:paddingLeft="4.0dip"
                    android:text="2013-12-10"
                    android:textSize="12.0sp" />

                <ImageView
                    android:id="@+id/issue_deadline_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/issue_deadline_date_text"
                    android:layout_alignTop="@+id/issue_deadline_date_text"
                    android:paddingLeft="6.0dip"
                    android:src="@drawable/ic_issue_deadline" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8.0dip" >

                <ImageView
                    android:id="@+id/issue_level_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4.0dip"
                    android:src="@drawable/ic_issue_level_high" />

                <TextView
                    android:id="@+id/issue_dscp_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7.0dip"
                    android:layout_toLeftOf="@id/issue_level_image"
                    android:includeFontPadding="false"
                    android:lines="2"
                    android:text="这个消防问题比较严重，需要及时解决， 请各部门积极配合解决"
                    android:textSize="13.0sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>